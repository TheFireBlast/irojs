{
    "compilerOptions": {
        "moduleResolution": "node",
        "lib": ["es2021"],
        "target": "es2020",

        "module": "commonjs",

        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
